<div id="newpost">
  <% @wall = (id = /\d+$/.match(request.original_url).to_a[0]) ? id : 0 %>
  <div class="form-control">
    <%= form_for @post do |form| %>
      <img class="align-self-start mr-3" src="https://images-na.ssl-images-amazon.com/images/I/41KJ0n3ZezL._SY450_.jpg" alt="Generic placeholder image">
      <br/>
      <%= form.hidden_field :wall_id, :value => @wall %>
      <%= form.label :message %>
      <%= form.text_field :message %>

      <%= form.submit "Submit" %>
    <% end %>
  </div>
</div>
